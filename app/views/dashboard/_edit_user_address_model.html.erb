<div class="modal fade" id="edit_address_model_<%= @address.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header error-title">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Edit Address</h4>
      </div>
      <%= form_for("address", :url => edit_user_address_dashboard_path(@address), :html => {:class => "edit-address-form", :id => "address_form_#{@address.id}" } ) do |f| %>
        <div class="modal-body modal-body-container">
          <div class="row">
            <div class="col-md-12 adress-container">
            
              <div class="row">
                <div class="col-md-6 camp-left">
                  <div class="campus-on on active">
                    <span><%= radio_button_tag :type, "On Campus" %>
                    </span>On Campus
                  </div>
                </div>
                <div class="col-md-6 camp-right">
                  <div class="campus-on off">
                    <span><%= radio_button_tag :type, "Off Campus" %></span>Off Campus
                  </div>
                </div>
              </div>
              <%= f.hidden_field :address_type, :class => "address_type_field" %>
              

              <div class= "on-campus-potion">
                <div class="row">
                    <div class="col-md-6 camp-left field school_selector">
                      <%= f.collection_select :school_id, School.all,:id,:school_name, {include_blank: "Select-Campus"}, {:class => 'Select-Campus'} %>
                    </div>
                    <div class="col-md-6 camp-left field building-selector">
                    </div
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6 camp-left">
                    <label>Room *</label>
                    <%= f.text_field :room_number, :placeholder => "Room", :class => "requried" %>
                  </div>
                  <div class="col-md-6 camp-left">
                    <label>Phone Number *</label>
                    <%= f.text_field :phone_number, :placeholder => "Phone Number", :class => "requried" %>
                  </div>
                </div>
                
              </div>
              
              <div class="off-campus-portion hide">
                <div class="row">
                  <div class="col-md-6 camp-left">
                    <label>Street Address *</label>
                    <input class="requried" type="text" name="f1" placeholder="Street Address">
                  </div>
                  <div class="col-md-6 camp-left">
                    <label>Room/Apartment *</label>
                    <input class="requried" type="text" name="f1" placeholder="Room/Apartment">
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6 camp-left">
                    <label>City *</label>
                    <%= f.text_field :city, :placeholder => "city", :class => "requried" %>
                  </div>
                  <div class="col-md-3 camp-left">
                    <label>State *</label>
                    <%= f.text_field :state, :placeholder => "state", :class => "requried" %>
                  </div>
                  <div class="col-md-3 camp-left">
                    <label>Zip Code *</label>
                    <%= f.text_field :zip_code, :placeholder => "zip code", :class => "requried" %>
                  </div>
                </div>
              </div>  
              <div class="row">
                <div class="col-md-12 camp-left">
                  <label>Give This Address A Name *</label>
                  <%= f.text_field :address_name, :placeholder => "Address Name", :class => "requried address_name_on" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary submit-md edit-address-btn" data-address = "<%= @address.id %>">Save</button>
        </div>
      <% end -%>  
    </div>
  </div>
</div>