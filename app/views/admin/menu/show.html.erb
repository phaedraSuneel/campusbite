<div class="row">
  <div class="col-md-12">
    <h3 class="page-title">
     <%= @restaurant.restaurant_name %> Menu
    </h3>
    <ul class="page-breadcrumb breadcrumb">
      <li>
        <i class="fa fa-home"></i>
        <%= link_to "Home", admin_dashboard_index_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li> <%= link_to "Restaurnats", admin_restaurants_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= link_to @restaurant.restaurant_name, admin_restaurant_path(@restaurant) %> 
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        Menu
      </li>
    </ul>  
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="portlet box blue">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-thumb-tack"></i>Menu Categories
        </div>
        <div class="tools">
          <a href="javascript:;" class="collapse">
          </a>
          <a href="javascript:;" class="reload">
          </a>
          <a href="javascript:;" class="remove">
          </a>
        </div>
      </div>
      <div class="portlet-body">
        <span class="pull-right">
          <%= link_to raw("<span class='label label-primary'>Add New</span>"),new_admin_menu_menu_category_path(@menu) %>
        </span> 
        <div class="table-responsive">
          <table class="table table-striped table-hover table-bordered">
            <thead>
              <tr>
                <th> Name </th>
                <th> Opening Time </th>
                <th> Closing Time </th>
                <th> Show </th>
                <th> Edit </th>
                <th> Delete</th>
              </tr>
            </thead>
            <tbody>
              <% @categories.each do |category|%>
                <tr>
                  <td> <%= category.category_name %></td>
                  <td><%= category.opening_time.strftime("%I:%M%p")  %></td>
                  <td><%= category.closing_time.strftime("%I:%M%p")  %></td>
                  <td> <%= link_to raw("<span class='label label-success'>Show </span>"), admin_menu_menu_category_path(@menu, category) %></td>
                  <td> <%= link_to raw("<span class='label label-default'>Edit </span>"), edit_admin_menu_menu_category_path(@menu, category) %></td>
                  <td> <%= link_to raw("<span class='label label-danger'>delete </span>"), admin_menu_menu_category_path(@menu, category), :method => :delete, :confirm => "are you sure?" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>  
          
        </div>
         
      </div>  
    </div>  
  </div>
  <div class="col-md-6">
    <div class="portlet box blue">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-thumb-tack"></i>Menu Items
        </div>
        <div class="tools">
          <a href="javascript:;" class="collapse">
          </a>
          <a href="javascript:;" class="reload">
          </a>
          <a href="javascript:;" class="remove">
          </a>
        </div>
      </div>
      <div class="portlet-body">
        <span class="pull-right">
          <%= link_to raw("<span class='label label-primary'>Add New</span>"),new_admin_menu_menu_item_path(@menu) %>
        </span> 
        <div class="table-responsive">
          <table class="table table-striped table-hover table-bordered">
            <thead>
              <tr>
                <th> Name </th>
                <th> Show </th>
                <th> Edit </th>
                <th> Delete</th>
              </tr>
            </thead>
            <tbody>
              <% @items.each do |item|%>
                <tr>
                  <td> <%= item.item_name %></td>
                  <td> <%= link_to raw("<span class='label label-success'>Show </span>"), admin_menu_menu_item_path(@menu, item) %></td>
                  <td> <%= link_to raw("<span class='label label-default'>Edit </span>"), edit_admin_menu_menu_item_path(@menu, item) %></td>
                  <td> <%= link_to raw("<span class='label label-danger'>delete </span>"), admin_menu_menu_item_path(@menu, item), :method => :delete, :confirm => "are you sure?" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>  
          
        </div>
         
      </div>  
    </div>
  </div>  
</div>
