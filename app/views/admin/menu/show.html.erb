<div class="row">
  <div class="col-md-12">
    <h3 class="page-title">
     <%= @restaurant.restaurant_name %> Menu
    </h3>
    <ul class="page-breadcrumb breadcrumb">
      <li>
        <i class="fa fa-home"></i>
        <%= link_to "Home", admin_dashboard_index_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li> <%= link_to "Restaurnats", admin_restaurants_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= link_to @restaurant.restaurant_name, admin_restaurant_path(@restaurant) %> 
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        Menu
      </li>
    </ul>  
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="portlet box blue">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-thumb-tack"></i>Menu Categories
        </div>
        <div class="tools">
          <a href="javascript:;" class="collapse">
          </a>
          <a href="javascript:;" class="reload">
          </a>
          <a href="javascript:;" class="remove">
          </a>
        </div>
      </div>
      <div class="portlet-body">
        <span class="pull-right">
          <%= link_to raw("<span class='label label-primary'>Add New</span>"),new_admin_menu_menu_category_path(@menu) %>
        </span> 
        <div class="table-responsive">
          <table class="table table-striped table-hover table-bordered">
            <thead>
              <tr>
                <th> Name </th>
                <th> Edit </th>
                <th> Delete</th>
              </tr>
            </thead>
            <tbody>
              <% @menu.menu_categories.each do |category|%>
                <tr>
                  <td> <%= category.category_name %></td>
                  <td> <%= link_to raw("<span class='label label-default'>Edit </span>"), edit_admin_menu_menu_category_path(@menu, category) %></td>
                  <td> <%= link_to raw("<span class='label label-danger'>delete </span>"), admin_menu_menu_category_path(@menu, category), :method => :delete, :confirm => "are you sure?" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>  
          
        </div>
         
      </div>  
    </div>  
  </div>
</div>  

<div class="row">
  <div class="container">
    <h3>View Menu </h3>
    </h3>
    <p>
      <% unless @menu.menu_categories.blank? %>
        <ul>
            <% @menu.menu_categories.each do |category| %>
              <li>
                <span> <%= category.category_name %></span>  
                  
                    (<%= link_to "delete" ,admin_menu_menu_category_path(@menu, category), :method => :delete, :confirm => "are you sure?" %> | 
                    <%= link_to "edit" ,edit_admin_menu_menu_category_path(@menu, category)%>)
                <ul> 
                  <% unless category.menu_items.blank? %>
                    <% category.menu_items.each do |item |%>
                      <li><label> <%= item.item_name %> </label> ($<%= item.price %>) 
                       (<%= link_to "show" ,admin_menu_menu_item_path(@menu, item) %> |
                       (<%= link_to "delete" ,admin_menu_menu_item_path(@menu, item), :method => :delete, :confirm => "are you 
                       sure?" %> |<%= link_to "edit" ,edit_admin_menu_menu_item_path(@menu, item)%> )<br >
                         <span><%= item.short_description %></span> <br >
                      </li>
                    <% end %>
                  <% end %>
                </ul>
              </li>  
            <% end%>
        </ul>  
      <% else %>
        <span> No Menu Category Existed </span>
      <% end %>
    </p>  
    <br />
    <% if can? :read, Menu %>  
      <%= link_to "back to menus" , admin_menu_index_path %> | 
    <% end %>  
    <%if can? :create, MenuCategory %>    
      <%= link_to "Add more menu category",  new_admin_menu_menu_category_path(@menu) %> |
    <% end %>  
    <% if can? :create, MenuItem %>  
      <%= link_to "Add more menu item",  new_admin_menu_menu_item_path(@menu) %> | 
    <% end  %>  
  </div>
</div>