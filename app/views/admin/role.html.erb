<div class="container">
	<div class="row">
		<table class="table table-striped user-result">
		  <thead>
		    <tr>
		      <th>Name</th>
		      <th>Created at</th>
		      <th>Acttions</th>
		    </tr>
		  </thead>
		  <tbody>
		    <% @roles.each do |role| %>
		      <tr>
		        <td><%= role.name %></td>
		        <td><%= role.created_at %></td>
		        <td>
		      		<%= link_to "view", show_role_admin_path(role) %>
		      		<%= link_to "edit", edit_role_admin_path(role) %>
		      		<%= link_to "delete",destroy_role_admin_path(role),
                      :method => :delete,:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>

		        </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
		<div> <%= link_to "Add new role", new_role_admin_index_path %></div>
		<div> <%= link_to "back", admin_index_path %></div>
	</div>	
</div>	