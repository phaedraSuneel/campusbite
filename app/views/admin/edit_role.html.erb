<div class="container">
	<div class="row">
		<%- model_class = Role -%>
		<div class="page-header">
		  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %></h1>
		</div>
	</div>
</div>	
<div class="container">
	<div class="row">
		<div class="new_user">
			<%= form_for @role, :url => update_role_admin_path, :method => :put, :html=> { class: 'new_user_form' } do |f| %>
				<div class= "error-box">
    			<p><%= errors_for(@role, "").html_safe %></p>
  			</div>
			  <div class="control-group">
			    <%= f.label :name, :class => 'control-label' %>
			    <div class="controls">
			      <%= f.text_field :name, :class => 'text_field required' %>
			    </div>
			  </div>
	    	<br >
			  <div class="form-actions">
			    <%= submit_tag "Submit", :class => 'new_user_form_submit' %>
			  </div>
			<% end %>
		</div>
	</div>
</div>

<script>
	$(document).ready(function(){
		$(".new_user_form_submit").click(function(){
			$(".new_user_form").submit();
		})
	});
</script>