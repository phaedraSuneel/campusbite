<div class="row">
  <div class="col-md-12">
    <h3 class="page-title">
     Redeam Item
    </h3>
    <ul class="page-breadcrumb breadcrumb">
      <li>
        <i class="fa fa-home"></i>
        <%= link_to "Home", admin_dashboard_index_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= link_to "Redeam Item", admin_redeams_path %>
      </li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="portlet">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-shopping-cart"></i>Listing redeam items
        </div>
        <div class="pull-right">
          <%= link_to raw('<span class="label label-default"> Add New Redeam Item </span>'), new_admin_redeam_path %>
        </div>
      </div>
      <div class="portlet-body">
        <div class="table-container">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Item name</th>
                <th> Item Image </th>
                <th>Item price</th>
                <th>Edit</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              <% @redeams.each do |redeam| %>
                <tr>
                  <td><%= redeam.item_name %></td>
                  <td class="text-center"><%= image_tag(redeam.upload.image(:medium))%></td>
                  <td><%= redeam.item_price %></td>
                  <td><%= link_to raw("<span class='label label-sm label-default'> edit </span>"), edit_admin_redeam_path(redeam) %></td>
                  <td><%= link_to raw("<span class='label label-sm label-danger'> delete </span>"), admin_redeam_path(redeam), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
