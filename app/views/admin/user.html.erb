<div class="container">
	<div class="row">
		<table class="table table-striped user-result">
		  <thead>
		    <tr>
		      <th>Name</th>
		      <th>Email</th>
		      <th>Roles</th>
		      <th>Created at</th>
		      <th>Acttions</th>
		    </tr>
		  </thead>
		  <tbody>
		    <% @users.each do |user| %>
		      <tr>
		        <td><%= user.name %></td>
		        <td><%= user.email %></td>
		        <td>
		        	<% user.roles.each do |role| %>
		        		<%= role.name %>
		        	<% end %>	
		        </td>
		        <td><%= user.created_at %></td>
		        <td>
		      		<%= link_to "view", show_user_admin_path(user) %>
		      		<%= link_to "edit", edit_user_admin_path(user) %>
		      		<%= link_to "delete", destroy_user_admin_path(user) ,:method => :delete,:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }%>

		        </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

		<div> <%= link_to "Add new user", new_user_admin_index_path %></div>
		<div> <%= link_to "back", admin_index_path %></div>
	</div>	
</div>	