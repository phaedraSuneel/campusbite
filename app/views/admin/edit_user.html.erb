<div class="container">
	<div class="row">
		<%- model_class = User -%>
		<div class="page-header">
		  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %></h1>
		</div>
	</div>
</div>	
<div class="container">
	<div class="row">
		<div class="new_user">
			<%= form_for @user, :url => update_user_admin_path, :method => :put, :html=> { class: 'new_user_form' } do |f| %>
				<div class= "error-box">
    			<p><%= errors_for(@user, "").html_safe %></p>
  			</div>
			  <div class="control-group">
			    <%= f.label :first_name, :class => 'control-label' %>
			    <div class="controls">
			      <%= f.text_field :first_name, :class => 'text_field required' %>
			    </div>
			  </div>

			  <div class="control-group">
			    <%= f.label :last_name, :class => 'control-label' %>
			    <div class="controls">
			      <%= f.text_field :last_name, :class => 'text_field required' %>
			    </div>
			  </div>
			  <div class="control-group">
			    <%= f.label :email, :class => 'control-label' %>
			    <div class="controls">
			      <%= f.email_field :email, :class => 'text_field' %>
			    </div>
			  </div>

				<div class="control-group" >
				  <%= f.label :password %>
	    		<div class="controls">
	    			<%= f.password_field :password %>
	    		</div>
	    	</div>		
	    	<div class="control-group" >
		    	<%= f.label :password_confirmation %>
		    	<div class="controls">
		    		<%= f.password_field :password_confirmation %>
	    		</div>
	    	</div>
	    	<div class="control-group">
	    		<%= f.label :role %>
		    	<div class="controls">
	    			<%= collection_select(:role, :id, Role.all, :id, :name, {:prompt => 'Select'})%>
	    		</div>	
	    	</div>	
	    	<br >
			  <div class="form-actions">
			    <%= submit_tag "Submit", :class => 'new_user_form_submit' %>
			  </div>
			<% end %>
		</div>
	</div>
</div>

<script>
	$(document).ready(function(){
		$(".new_user_form_submit").click(function(){
			$(".new_user_form").submit();
		})
	});
</script>