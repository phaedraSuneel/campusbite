<div class="row">
  <div class="col-md-12">
    <h3 class="page-title">
     Permissions 
    </h3>
    <ul class="page-breadcrumb breadcrumb">
      <li>
        <i class="fa fa-home"></i>
        <%= link_to "Home", admin_dashboard_index_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li> Permissoins
        <i class="fa fa-angle-right"></i>
      </li>
      <li><%= link_to "User Roles", admin_user_roles_path %></li>
    </ul>  
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="portlet">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-user"></i>User Role Listing
        </div>
        <div class="pull-right">
          <%= link_to "Add New Role", new_admin_user_role_path, :class => "btn btn-primary" %>
        </div>
      </div>
      <div class="portlet-body">
        <div class="table-container">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Entity</th>
                <th>Action</th>
                <th>Notes</th>
                <th>Edit</h>
                <th>Delete</th>
              </tr>
            </thead>  
            <tbody>
              <% @user_roles.each do |role|%>
                <tr>
                  <td><%= role.name %> </td>
                  <td><%= role.entity %></td>
                  <td><%= role.action %></td>
                  <td><%= role.notes %></td>
                  <td><%= link_to raw("<span class='label label-default'>edit</span>"), edit_admin_user_role_path(role)%></td>
                  <td><%= link_to raw("<span class='label label-danger'>delete</span>"), admin_user_role_path(role), :method => :delete, :confirm => "are you sure? " %>
                  </td>
                </tr>
              <% end %>
            </tbody>                
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
