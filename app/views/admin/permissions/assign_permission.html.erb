<div class="row">
  <div class="col-md-12">
    <h3 class="page-title">
     Assign Permissions
    </h3>
    <ul class="page-breadcrumb breadcrumb">
      <li>
        <i class="fa fa-home"></i>
        <%= link_to "Home", admin_dashboard_index_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= link_to "Permissoins", admin_permissions_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= @role.name %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        Assign Permission
      </li>
    </ul>  
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="portlet box yellow">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-user"></i>List of Role 
        </div>
      </div>
      <div class="portlet-body form">
        <%= form_for @role, :url => create_permission_admin_permission_path(@role) do |f|%>
           <div class="form-body">
             <h3 class="block"> Select Roles  </h3>
              <div class="from-group row">
                <div class="checkbox-list control-label col-md-6">
                  <% UserRole.all.each do |role| %>
                    <label><%= check_box_tag "role[user_role_ids][]", role.id, @role.user_role_ids.include?(role.id), id: dom_id(role), :class => 'checkbox-inline' %>
                      <%= role.name %>
                    </label>    
                  <% end %>
                </div>
              </div>
            </div>
            <div class="form-actions fluid">
              <div class="col-md-offset-4 col-md-4">
                <%= f.submit "Save", :class => "btn green" %>
                <%= link_to "Cancel", admin_permissions_path,:class => "btn default "%>
              </div>  
            </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>        