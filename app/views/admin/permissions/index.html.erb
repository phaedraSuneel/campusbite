<div class="row">
  <div class="col-md-12">
    <div class="portlet">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-user"></i>User Type Listing
        </div>
        <div class="pull-right">
          <%= link_to "Add New User Type", "#", :class => "btn btn-primary" %>
        </div>
      </div>
      <div class="portlet-body">
        <div class="table-container">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>User Type</th>
                <th>View </th>
                <th>Edit</h>
                <th>Delete</th>
              </tr>
            </thead>  
            <tbody>
              <% @roles.each do |role|%>
                <tr>
                  <td><%= role.name %> </td>
                  <td><%= link_to raw("<span class='label label-success'>show</span>"), '#'%></td>
                  <td><%= link_to raw("<span class='label label-default'>edit</span>"), '#'%></td>
                  <td><%= link_to raw("<span class='label label-danger'>delete</span>"), '#', :method => :delete, :confirm => "are you sure? " %>
