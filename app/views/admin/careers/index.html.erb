<div class="row">
  <div class="col-md-12">
    <h3 class="page-title">
     Careers
    </h3>
    <ul class="page-breadcrumb breadcrumb">
      <li>
        <i class="fa fa-home"></i>
        <%= link_to "Home", admin_dashboard_index_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li> <%= link_to "Careers", admin_careers_path %></li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="portlet">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-user"></i>Listing careers
        </div>
        <div class="pull-right">
          <%= link_to raw('<span class="label label-default">Add New Career </span>'), new_admin_career_path %>
        </div>
      </div>
      <div class="portlet-body">
        <div class="table-container">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Title</th>
                <th>Location</th>
                <th>View</th>
                <th>Edit</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              <% @careers.each do |career| %>
                <tr>
                  <td><%= career.title %></td>
                  <td><%= career.location %></td>
                  <td><%= link_to raw("<span class='label label-sm label-success'> show </span>"), admin_career_path(career) %></td>
                  <td><%= link_to raw("<span class='label label-sm label-default'> edit </span>"), edit_admin_career_path(career) %></td>
                  <td><%= link_to raw("<span class='label label-sm label-danger'> delete </span>"), admin_career_path(career) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
