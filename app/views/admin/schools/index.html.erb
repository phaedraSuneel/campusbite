<h1>Listing schools</h1>
<table class="table table-striped user-result">
  <tr>
    <th>School name</th>
    <th>School address</th>
    <th>Branch name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%= school.school_name %></td>
    <td><%= school.school_address %></td>
    <td><%= school.branch_name %></td>
    <% if can? :read, School %>
      <td><%= link_to 'Show', admin_school_path(school) %></td>
    <% end %>  
    <% if can? :update, School %>  
      <td><%= link_to 'Edit', edit_admin_school_path(school) %></td>
    <% end %>   
    <% if can? :delete, School %>  
      <td><%= link_to 'Destroy', admin_school_path(school), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>  
  </tr>
<% end %>
</table>

<br />
<% if can? :create, School %>  
  <%= link_to 'New School', new_admin_school_path %>
<% end %>  
