<div class="row">
  <div class="col-md-4">
    <div class="portlet box blue">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-thumb-tack"></i> Opening-Closing Timing
        </div>
        <div class="tools">
          <a href="javascript:;" class="collapse">
          </a>
          <a href="javascript:;" class="reload">
          </a>
          <a href="javascript:;" class="remove">
          </a>
        </div>
      </div>
      <div class="portlet-body">
        <ul class="feeds">
          <li>
            <div class="col-md-4 font-bold"> Day  </div>
            <div class="col-md-4 font-bold"> Open Time </div>
            <div class="col-md-4 font-bold"> Close Time </div>
          </li>
          <% @restaurant.operation.sechedules.each do |schedule| %>
            <li>
              <div class="col-md-4"> <label> <%= schedule.day %> </label></div>
              <div class="col-md-4"> <label> <%= schedule.opening_time.strftime("%I:%M%p")  %> </label></div>
              <div class="col-md-4"> <label> <%= schedule.closing_time.strftime("%I:%M%p")  %> </label> </div>
            </li>
            <% unless schedule.break_schedule.blank? %>
              <li>
                <div class="col-md-4"> <label> Break </label></div>
                <div class="col-md-4"> <label> <%= schedule.break_schedule.opening_time.strftime("%I:%M%p")  %> </label></div>
                <div class="col-md-4"> <label> <%= schedule.break_schedule.closing_time.strftime("%I:%M%p")  %> </label> </div>
