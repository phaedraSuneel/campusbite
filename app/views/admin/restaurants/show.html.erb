              <div class="col-md-4"> <label> <%= schedule.day %> </label></div>
              <div class="col-md-4"> <label> <%= schedule.opening_time.strftime("%I:%M%p")  %></label></div>
              <div class="col-md-4"> <label> <%= schedule.closing_time.strftime("%I:%M%p")  %> </label></div>
            </li>
            <% unless schedule.break_schedule.blank? %>
              <li>
                <div class="col-md-4"> <label> Break </label></div>
