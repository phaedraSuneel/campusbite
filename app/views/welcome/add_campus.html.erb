<div class="row search-container result-page menupage checkout-page last-page aboutus-page owner-page-1">
  <div class="container">
    <div class="col-md-12 main-fram-container">
      <div class="row">
        <div class="col-md-4  col-md-offset-4 about-logo">
          <img class="logo-image" alt="Smiley face" src="/assets/about-logo.png" />
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 about-heading padding-zero">
          <h1>ADD your campus to campusbite</h1>
          <p class="thanks">Thank You for taking the time to recommend adding your Campus to CampusBite. Please fill out the form below so that we can do our best to add your Campus to CampusBite.</p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 main-fram-canvus">
          <div class="row">
            <div class="col-md-12 about-heading">
              <div class="Add-forms">
                <%= form_for("user", :url => 'campus_suggestion', :html =>{:class => 'contact-us-form', :method => :get }) do |f|%>
                  <div class="row field-category">
                    <div class="col-md-4 items">
                      <label>First Name: *</label>
                      <%= f.text_field :first_name %>
                    </div>
                    <div class="col-md-4 items">
                      <label>Last Name: *</label>
                      <%= f.text_field :last_name %>
                    </div>
                    <div class="col-md-4 items">
                      <label>Email: *</label>
                      <%= f.email_field :email %>
                    </div>
                  </div>
                  <div class="row field-category">
                    <div class="col-md-4 items">
                      <label>Campus name: *</label>
                      <%= f.text_field :campus_name %>
                    </div>
                    <div class="col-md-8 items">
                      <label>Street Address:</label>
                      <%= f.text_field :street_address %>
                    </div>
                  </div>
                  <div class="row field-category">
                    <div class="col-md-4 items">
                      <label>City: </label>
                      <%= f.text_field :city %>
                    </div>
                    <div class="col-md-4 items">
                      <label>State: *</label>
                      <%= f.text_field :state %>
                    </div>
                    <div class="col-md-4 items">
                      <label>Zip Code: *</label>
                      <%= f.text_field :zip_code %>
                    </div>
                  </div>
                  <div class="row field-category">
                    <div class="col-md-8 items">
                      <label>Comments:</label>
                      <%= f.text_area :comment %>
                    </div>
                    <div class="col-md-4 items">
                      <button>Submit</button>
                    </div>
                  </div>
                <% end -%>  
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>