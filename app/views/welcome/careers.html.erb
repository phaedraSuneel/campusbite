<div class="row search-container result-page menupage checkout-page last-page aboutus-page career-page">
  <div class="container">
    <div class="col-md-12 main-fram-container">
      <div class="row">
        <div class="col-md-4  col-md-offset-4 about-logo">
          <%= link_to raw("<img class='logo-image' alt='Smiley face' src='/assets/about-logo.png'>"), '/' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 about-heading">
          <h1>Careers</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 about-heading">
          <div class="panel-group" id="accordion">
            <% @careers.each do |career| %>
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= career.id%>">
                      <label><%= career.title %> - <%= career.location %></label>
                      <span class="add pull-right"><img src="/assets/minus.png"></span>
                      <span class="less pull-right"><img src="/assets/plus.png"></span>
                    </a>
                  </h4>
                </div>
                <div id="collapse<%= career.id%>" class="panel-collapse collapse">
                  <div class="panel-body">
                    <h5>This Job Responsiibilities:</h5>
                    <p><%= career.responsibilities %> </p>
                  </div>
                </div>
              </div>
            <% end -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $(".add.pull-right")[0].click();
  });
</script>