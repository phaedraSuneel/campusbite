<div class="table-container">
  <table class="table table-striped table-bordered table-hover" id="datatable_orders">
  	<caption class="hide"> General Orders Report</caption>
    <thead>
      <tr role="row" class="heading">
          <th width="5%">
             ORDER&nbsp;ID
          </th>
          <th width="15%">
            Transmit
          </th>
          <th width="15%">
            Date
          </th>
          <th>
            Time
          </th>
          <th>
            Restaurant
          </th>
          <th>
            Payment
          </th>
          <th>
            Order Type
          </th>
          <th>
            Order Time
          </th>
          <th>
            Customer
          </th>
          <th>
            Subtotal
          </th>
          <th>
            Tax
          </th>
          <th>
            Delivery Fee
          </th>
          <th>
            Tip
          </th>
          <th>
            Total
          </th>
          <th>
            Promo Code
          </th>
          <th>
            Online Discount
          </th>
          <th>
            Total After Coupons
          </th>
        </tr>
    </thead>  
    <tbody>
      <% sub_total = 0 
      tax = 0
      delivery_charges =0
      tip = 0
      total = 0
      promo_code = 0
      discount = 0
      total_bill = 0
      %>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%if order.restaurant.can_fax? %>
            FAX
           <% end %> 
          </td>
          <td><%= order.updated_at.strftime('%e %B, %Y')%></td>
          <td><%= order.updated_at.strftime('%I:%M%p')%></td>
          <td><%= order.restaurant.restaurant_name %></td>
          <td><%= order.method_type %></td>
          <td><%= order.order_type %></td>
          <td><%= order.request_time %></td>
          <td><%= order.user.name %></td>
          <% sub_total += order.sub_total %>
          <td><%= order.sub_total %></td>
          <% tax += order.sale_tax %>
          <td><%= order.sale_tax %></td>
          <% delivery_charges += order.restaurant.delivery_charges %>
          <td><%= order.restaurant.delivery_charges %></td>
          <% tip += order.tip%>
          <td><%= order.tip %></td>
          <% total += order.total_bill %>
          <td><%= order.total_bill %></td>
          <td>0</td>
          <td>0</td>
          <% total_bill += order.total_after_discount %>
          <td><%= order.total_after_discount %></td>
        </tr>
      <% end %>
      <tr>
        <td>Total</td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td> <%= sub_total%></td>
        <td><%= tax %></td>
        <td><%= delivery_charges%></td>
        <td><%= tip %></td>
        <td><%= total %></td>
        <td><%= promo_code %></td>
        <td><%= discount%></td>
        <td><%= total_bill %></td>
      </tr>
    </tbody>  
  </table>  
</div>