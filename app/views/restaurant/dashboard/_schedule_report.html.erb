<div class="table-container">
  <table class="table table-striped table-bordered table-hover" id="datatable_orders">
  	<caption class="hide"> Schedule Orders Report</caption>
    <thead>
      <tr role="row" class="heading">
          <th width="5%">
             ORDER&nbsp;ID
          </th>
          <th width="15%">
            Transmit
          </th>
          <th width="15%">
            Date
          </th>
          <th>
            Time
          </th>
          <th>
            Restaurant
          </th>
          <th>
            Payment
          </th>
          <th>
            Order Type
          </th>
          <th>
            Order Time
          </th>
          <th>
            Customer
          </th>
          <th>
            Subtotal
          </th>
          <th>
            Tax
          </th>
          <th>
            Delivery Fee
          </th>
          <th>
            Tip
          </th>
          <th>
            Total
          </th>
          <th>
            Promo Code
          </th>
          <th>
            Online Discount
          </th>
          <th>
            Total After Coupons
          </th>
        </tr>
    </thead>  
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%if order.restaurant.can_fax? %>
            FAX
           <% end %> 
          </td>
          <td><%= order.updated_at.strftime('%e %B, %Y')%></td>
          <td><%= order.updated_at.strftime('%I:%M%p')%></td>
          <td><%= order.restaurant.restaurant_name %></td>
          <td><%= order.method_type %></td>
          <td><%= order.order_type %></td>
          <td><%= order.request_time %></td>
          <td><%= order.user.name %></td>
          <td><%= order.sub_total %></td>
          <td><%= order.sale_tax %></td>
          <td><%= order.restaurant.delivery_charges %></td>
          <td><%= order.tip %></td>
          <td><%= order.total_bill %></td>
          <td>0</td>
          <td>0</td>
          <td><%= order.total_bill %></td>
        </tr>
      <% end %>
    </tbody>  
  </table>  
</div>