<div class="row">
  <div class="col-md-4">
    <table class="table table-striped table-hover table-bordered">
      <caption> Restaurant Opening - Closing Time </caption>
      <thead>
        <th> Day </th>
        <th> Open </th>
        <th> Closed </th>
        <th> Edit</th>
      </thead>
      <tbody> 
        <% @restaurant.operation.sechedules.each do |sechedule| %>
         <tr>
            <td><%= sechedule.day %> </td>
            <td> <%= sechedule.opening_time.strftime("%I:%M%p") %> </td>
            <td><%= sechedule.closing_time.strftime("%I:%M%p") %> </td>
            <td> <% unless sechedule.status=='pending' %>
                  <%= link_to "edit", "javascript:void(0);", "data-toggle"=>"modal", "data-target"=>"#edit_sechedule_model_#{sechedule.id}"%> 
                <% else %>
                  pending  
                <% end %>
            </td>
         </tr> 
         <%= render :partial => "edit_sechedule_model", :locals => { :@sechedule => sechedule} %>
        <% end %>
      </tbody>  
    </table>
