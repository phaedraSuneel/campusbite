<div class="row">
  <div class="col-md-12">
    <h3 class="page-title">
     Settings <small> <%= @restaurant.restaurant_name %> </small> 
    </h3>
    <ul class="page-breadcrumb breadcrumb">
      <li>
        <i class="fa fa-home"></i>
        <%= link_to "Home", restaurant_dashboard_index_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= link_to "Restaurant", 'javascript:;' %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= link_to "Support", support_restaurant_dashboard_index_path %>
      </li>
    </ul>  
  </div>
</div>
<div class="row">
  <div class="portlet box yellow col-md-offset-3 col-md-6">
    <div class="portlet-title">
      <div class="caption">
        <i class="fa fa-thumb-tack"></i>Support
      </div>
      <div class="tools">
        <a href="javascript:;" class="collapse">
        </a>
        <a href="javascript:;" class="reload">
        </a>
        <a href="javascript:;" class="remove">
        </a>
      </div>
    </div>
    <div class="portlet-body form">
      <%= form_for("contactus", :url => contact_admin_restaurant_dashboard_index_path, :html =>{:class => 'contact-us-form',:id => "conecting-container-inner-1", :method => :get }) do |f|%>
        <div class="form-body">

          <div class="form-group">
            <label class="form-label" >Your Name </label>
            <%= f.text_field :name, :class=> "form-control" %>
          </div>
          <div class="form-group">
            <label class="form-label" >Restaurant Name </label>
            <%= f.text_field :restaurant_name, :class=> "form-control" %>
          </div>
          <div class="form-group">
            <label class="form-label" >Phone Number</label>
            <%= f.text_field :phone_number, :class=> "form-control" %>
          </div>
        
          <div class="form-group">
            <label class="form-label">Issue or Message</label>
            <%= f.text_area :message, :class=> "form-control", :rows=>"3" %>
            <%= f.hidden_field :user_id, :value => current_user.id %>
          </div>
        </div>  
        <div class="form-actions form-group">
          <div class="text-center">
            <button class="btn green">Send Request</button>
          </div>
        </div>
      <% end %>  
      <div class="conecting-container-inner hide" id="thanks">
        <div class="col-md-12 form-group support-message">
          <label class="form-label">You request has been sent to admin,  We will get in touch with you shortly. </label>
        </div>
      </div>
    </div>  
  </div>
</div>  


<script type="text/javascript">
  $(document).ready(function(){
    var hash = window.location.hash.substring(1);
    if(hash =="sent"){
      window.location.hash.substring(1);
      $("#conecting-container-inner-1").addClass("hide");
      $("#thanks").removeClass("hide");
    }  
    else{
      $("#conecting-container-inner-1").removeClass("hide");
      $("#thanks").addClass("hide");
    }  
  });
</script>