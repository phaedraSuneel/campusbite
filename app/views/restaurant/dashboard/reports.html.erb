<div class="row">
  <div class="col-md-12">
    <h3 class="page-title">
     General Report
    </h3>
    <ul class="page-breadcrumb breadcrumb">
      <li>
        <i class="fa fa-home"></i>
        <%= link_to "Home", restaurant_dashboard_index_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= link_to "Restaurant", 'javascript:;' %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= link_to "Reports",reports_restaurant_dashboard_index_path %>
      </li>
    </ul>  
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="portlet">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-shopping-cart"></i>Report Listing
        </div>
        <div class="pull-right">
          <%= link_to raw("<i class='fa fa-print'></i>"), general_report_restaurant_dashboard_index_path, :class => "btn btn-default", :target => "_blank" %>
        </div>  
      </div>
      <div class="portlet-body">
        <div class="table-container">
          <table class="table table-striped table-bordered table-hover datatable_reports">
            <caption class="hide"> General Orders Report</caption>
            <thead>
              <tr role="row" class="heading">
                  <th width="5%">
                     ORDER&nbsp;ID
                  </th>
                  <th width="5%">
                    Transmit
                  </th>
                  <th width="15%">
                    Date
                  </th>
                  <th width="5%">
                    Time
                  </th>
                  <th width="5%">
                    Restaurant
                  </th>
                  <th width="5%">
                    Payment
                  </th>
                  <th width="5%">
                    Order Type
                  </th>
                  <th width="5%">
                    Order Time
                  </th>
                  <th width="5%">
                    Customer
                  </th>
                  <th width="5%">
                    Subtotal
                  </th>
                  <th width="5%">
                    Tax
                  </th>
                  <th width="5%">
                    Delivery Fee
                  </th>
                  <th width="5%">
                    Tip
                  </th>
                  <th width="5%">
                    Total
                  </th>
                  <th width="5%">
                    Promo Code
                  </th>
                  <th width="5%">
                    Online Discount
                  </th>
                  <th width="5%">
                    Total After Coupons
                  </th>
                </tr>
            </thead>  
            <tbody>
              <% sub_total = 0 
              tax = 0
              delivery_charges =0
              tip = 0
              total = 0
              promo_code = 0
              discount = 0
              total_bill = 0
              %>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= order.id %></td>
                  <td><%if order.restaurant.can_fax? %>
                    FAX
                   <% end %> 
                  </td>
                  <td><%= order.updated_at.strftime('%e %B, %Y')%></td>
                  <td><%= order.updated_at.strftime('%I:%M%p')%></td>
                  <td><%= order.restaurant.restaurant_name %></td>
                  <td><%= order.method_type %></td>
                  <td><%= order.order_type %></td>
                  <td><%= order.request_time %></td>
                  <td><%= order.user.name %></td>
                  <% sub_total += order.sub_total %>
                  <td><%= order.sub_total %></td>
                  <% tax += order.sale_tax %>
                  <td><%= order.sale_tax %></td>
                  <% delivery_charges += order.restaurant.delivery_charges %>
                  <td><%= order.restaurant.delivery_charges %></td>
                  <% tip += order.tip%>
                  <td><%= order.tip %></td>
                  <% total += order.total_bill %>
                  <td><%= order.total_bill %></td>
                  <td>0</td>
                  <td>0</td>
                  <% total_bill += order.total_bill %>
                  <td><%= order.total_bill %></td>
                </tr>
              <% end %>
              <tr>
                <td>Total</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td> <%= sub_total%></td>
                <td><%= tax %></td>
                <td><%= delivery_charges%></td>
                <td><%= tip %></td>
                <td><%= total %></td>
                <td><%= promo_code %></td>
                <td><%= discount%></td>
                <td><%= total_bill %></td>
              </tr>
            </tbody>  
          </table>  
        </div>
      </div>  
    </div>    
  </div>  
</div>