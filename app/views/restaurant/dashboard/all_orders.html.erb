<div class="row">
  <div class="col-md-12">
    <h3 class="page-title">
     All Orders
    </h3>
    <ul class="page-breadcrumb breadcrumb">
      <li>
        <i class="fa fa-home"></i>
        <%= link_to "Home", restaurant_dashboard_index_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= link_to "Restaurant", 'javascript:;' %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= link_to "All Orders",all_orders_restaurant_dashboard_index_path %>
      </li>
    </ul>  
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="portlet">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-shopping-cart"></i>Order Listing
        </div>
        <div class="pull-right">
          <%= link_to raw("<i class='fa fa-print'></i>"), all_orders_report_restaurant_dashboard_index_path, :class => "btn btn-default", :target => "_blank" %>
        </div>
      </div>
      <div class="portlet-body">
        <div class="table-container">
  <table class="table table-striped table-bordered table-hover" id="datatable_orders">
    <caption class="hide"> All Orders Report</caption>
    <thead>
      <tr role="row" class="heading">
          <th width="5%">
             ORDER&nbsp;ID
          </th>
          <th width="15%">
             ORDER&nbsp;DATE&nbsp;AND&nbsp;TIME
          </th>
          <th width="15%">
            ORDER&nbsp;TYPE
          </th>
          <th width="10%">
            ORDER&nbsp;TIME
          </th>
          <th width="10%">
             CUSTOMER&nbsp;NAME 
          </th>
          <th width="10%">
            TOTAL
          </th>
          <th width="10%">
             Status
          </th>
          <th width="10%">
             Action
          </th>
        </tr> 
        <tfoot>
        <tr>
          <th  width="5%">ORDER&nbsp;ID</th>
          <th width="15%">ORDER&nbsp;DATE&nbsp;AND&nbsp;TIME</th>
          <th width="15%"> ORDER&nbsp;TYPE</th>
          <th width="10%">
            ORDER&nbsp;TIME
          </th>
          <th width="10%">CUSTOMER&nbsp;NAME </th>
          <th width="10%">TOTAL</th>
          <th width="10%">Status</th>
        </tr>
      </tfoot>

    </thead>  
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.created_at.strftime('%e %B, %Y %I:%M%p')%></td>
          <td><%= order.order_type %></td>
          <td><%= order.request_time %></td>
          <td><%= order.user.name %></td>
          <td>$<%= order.total_bill %></td>
          <td><%= order.status %></td>
          <td>
            <%= link_to "View", order_restaurant_dashboard_path(order), :class => "btn default btn-xs green-stripe" %>
          </td>
        </tr>
      <% end %>
    </tbody>  
  </table>  
</div>
      </div>  
    </div>    
  </div>  
</div>  

<script>
  $(document).ready(function() {    
    $("#datatable_orders").dataTable().columnFilter();
  });
</script>