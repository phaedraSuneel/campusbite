<div class="row">
  <div class="col-md-12">
    <h3 class="page-title">
     Settings <small> <%= @restaurant.restaurant_name %> </small> 
    </h3>
    <ul class="page-breadcrumb breadcrumb">
      <li>
        <i class="fa fa-home"></i>
        <%= link_to "Home", restaurant_dashboard_index_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= link_to "Restaurant", 'javascript:;' %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= link_to "Settings", settings_restaurant_dashboard_index_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= link_to "Restaurant Menu", settings_restaurant_dashboard_index_path %>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <%= link_to "Edit Menu item", 'javascript:;' %>
      </li>
    </ul>  
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="portlet box yellow">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-edit"></i>Edit Menu Item
        </div>
        <div class="tools">
          <a href="javascript:;" class="collapse">
          </a>
          <a href="javascript:;" class="reload">
          </a>
          <a href="javascript:;" class="remove">
          </a>
        </div>
      </div>
      <div class="portlet-body form">
        <%= form_for( @menu_item, :url => update_item_restaurant_setting_path(@menu_item), :html => {:multipart => true, :class => "form-horizontal" }) do |f| %>
          <div class="form-body">
            <% if @menu_item.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@menu_item.errors.count, "error") %> prohibited this menu_item from being saved:</h2>

                <ul>
                <% @menu_item.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <label class="col-md-3 control-label">Item Name</label>
              <div class="col-md-9">
                <%= f.text_field :item_name, :class => "form-control" %>
              </div>  
            </div>

            <div class="form-group">
              <label class="col-md-3 control-label">Item Type</label>
              <div class="col-md-9">
                <div class="radio-list">
                  <label><%= f.radio_button :menu_item_type,"veg", :checked => true%> Veg </label>
                  <label><%= f.radio_button :menu_item_type,"non-veg"%> Non-veg </label>
                  <label><%= f.radio_button :menu_item_type,"other"%> other </label>
                </div>
              </div>  
            </div>  
            
            <div class="form-group">
              <label class="col-md-3 control-label">Menu Category</label>
              <div class="col-md-9">
                <%= f.collection_select :menu_category_id, @menu.menu_categories,:id,:category_name, :class=> "form-control" %>
              </div>  
            </div>

            <div class="form-group">
              <label class="col-md-3 control-label">Menu Cuisine</label>
              <div class="col-md-9">
                <%= f.collection_select :cuisine_id, Cuisine.all,:id,:name , :include_blank => :true, :class=> "form-control"%>
              </div>  
            </div>

            <div class="form-group">
              <label class="col-md-3 control-label">Addons</label>
              <div class="col-md-9">
                <div class="radio-list">
                  <label class="radio-inline"><%= f.radio_button :addons, true %> Yes</label>
                  <label class="radio-inline"><%= f.radio_button :addons, false, :checked => true %> No</label>
                </div>
              </div>
            </div>    

            <div class="form-group">
              <label class="col-md-3 control-label">Item Price</label>
              <div class="col-md-9">
                <%= f.text_field :price, :class => "form-control" %>
              </div>  
            </div>

            <div class="form-group">
              <label class="col-md-3 control-label">Item Properties</label>
              <div class="col-md-9  radio-controls">
                <div class="radio-list">
                  <label class="radio-inline"><%= radio_button_tag "Property", "1" %>Yes</label>
                  <label class="radio-inline"><%= radio_button_tag "Property", "0",:checked => "checked" %>No</label>
                </div>
                <div class="row property-field">
                </div>
                <%= link_to "Add more property", "#", :remote => :true , :class => "hide add_more_property_link" %>
              </div>
            </div> 
  
            <div class="form-group">
              <label class="col-md-3 control-label">Short Description</label>
              <div class="col-md-9">
                <%= f.text_field :short_description, :class => "form-control"  %>
              </div>  
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label">Special Instruction</label>
              <div class="col-md-9">
                <div class="radio-list">
                  <label class="radio-inline"><%= f.radio_button :instruction, true %> Yes</label>
                  <label class="radio-inline"><%= f.radio_button :instruction, false, :checked => true %> No</label>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-3 control-label">Description</label>
              <div class="col-md-9">
                <%= f.text_area :description, :class=> "form-control", :rows=>"3" %>
              </div>  
            </div>


            <div class="form-group">
              <label class="col-md-3 control-label"> Item photo</label>
              <div class="col-md-9">
                <%= f.file_field :photo, :class => "form-control" %>
              </div>  
            </div>

            <div class="form-group">
              <label class="col-md-3 control-label">Popular Dish</label>
              <div class="col-md-9">
                <div class="radio-list">
                  <label class="radio-inline"><%= f.radio_button :popluar_dish, true %> Yes</label>
                  <label class="radio-inline"><%= f.radio_button :popluar_dish, false, :checked => true %> No</label>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-3 control-label">Spicy Dish</label>
              <div class="col-md-9">
                <div class="radio-list">
                  <label class="radio-inline"><%= f.radio_button :spicy_dish, true %> Yes</label>
                  <label class="radio-inline"><%= f.radio_button :spicy_dish, false, :checked => true %> No</label>
                </div>
              </div>
            </div>
            
          </div> 

          <div class="form-actions fluid">
            <div class="col-md-offset-3 col-md-9">
              <%= f.submit "Update Menu Item", :class => "btn green "%>
              <%= link_to "Cancel", settings_restaurant_dashboard_index_path,:class => "btn default "%>
            </div>
          </div> 
        <% end %>
      </div>
    </div>
  </div>
</div>        
