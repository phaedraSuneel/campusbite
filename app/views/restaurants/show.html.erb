<div class="row">
  <div class="container">  
    <p>
      <b>Restaurant name:</b>
      <%= @restaurant.contact_info.restaurant_name %>
    </p>

    <p>
      <b>Restaurant phone:</b>
      <%= @restaurant.contact_info.restaurant_phone %>
    </p>

    <p>
      <b>Restaurant website:</b>
      <%= @restaurant.contact_info.restaurant_website %>
    </p>

    <p>
      <b>Restaurant street address:</b>
      <%= @restaurant.contact_info.restaurant_street_address %>
    </p>

    <p>
      <b>State:</b>
      <%= @restaurant.contact_info.state %>
    </p>

    <p>
      <b>City:</b>
      <%= @restaurant.contact_info.city %>
    </p>

    <p>
      <b>Zip code:</b>
      <%= @restaurant.contact_info.zip_code %>
    </p>

    <p>
      <b>About restaurant:</b>
      <%= @restaurant.restaurant_info.about_restaurant %>
    </p>

    <p>
      <b>Is pick up:</b>
      <%= @restaurant.restaurant_info.is_pick_up %>
    </p>

    <p>
      <b>Is deliver:</b>
      <%= @restaurant.delivery_info.is_delivery %>
    </p>

    <p>
      <b>Min delivery:</b>
      <%= @restaurant.restaurant_info.min_order %>
    </p>

    <p>
      <b>Delivery Estimate Time:</b>
      <%= @restaurant.delivery_info.delivery_estimated_time %>
    </p>

    <p>
      <b>Featured:</b>
      <%= @restaurant.restaurant_info.is_featured %>
    </p>

    <p>
      <label>Restaurant Categories</label> <br>
      <% @restaurant.restaurant_categories.each do |cat| %>
        <span><%= cat.category_name%> </span> <br>
      <% end %> 
    </p>
    <p>
      <%= link_to "View Menu" , menu_path(@restaurant.menu) %>  
    </p>  
    <% unless params[:school_id].blank? %>
      <% if can? :update, Restaurant %>  
        <%= link_to 'Edit', edit_school_restaurant_path(@school, @restaurant) %> |
      <% end %>   
      <% if can? :read, Restaurant %>    
        <%= link_to 'Back', school_restaurants_path(@school) %> 
      <% end %>  
    <% else %>
      <% if can? :update, Restaurant %>  
        <%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
      <% end %>   
      <% if can? :read, Restaurant %>    
        <%= link_to 'Back', restaurants_path %>
      <% end %>  
    <% end %>  
  </div>
</div>