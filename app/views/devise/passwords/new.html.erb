<div class="main-body signup-page">
	<div class="row search-container">
	  <div class="container">
	    <div class="col-md-12 bits-campus">
	      <img class="logo-image" alt="Smiley face" src="/assets/campus-bite.png">
	      <p>Sign in to your account</p>
	    </div>
	    <div class="row singup-category">
	      <div class="col-md-8 col-md-offset-2 signup-container">
	        <div class="row signup-field">
	          <div class="page-ring">
	            <img class="single-ring" alt="Smiley face" src="/assets/single-ring.png">
	          </div>
	          <div class="sign-btn">
	            <p><%= link_to raw("<button class='sign-in-btn'>Sign in</button>"), new_session_path(resource_name) %></p>
              <p><%= link_to raw("<button class='sign-in-btn'>Sign up</button>"), new_registration_path(resource_name)%></p>
	          </div>
	          
	          <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
							<%= devise_error_messages! %>
		          <div class="col-md-12 signup-form-container">
		            <div class="signup-form forget-form">
		            	<h4>Forgot your password?</h4>
		              <p class="issue">Thats no issue! Just enter the email address associated with CampusBite and we will email you the link to create a new password.</p>
		              <label class="email-name">Email</label>
		              <%= f.email_field :email, :autofocus => true, :class => "email-input" %>
		              <img class="form-shadow" alt="Smiley face" src="/assets/shadow.png">
		            </div>
		          </div>
		          <div class="col-md-12 submit-button">
		            <button>Submit</button>
		          </div>
		        <% end -%>  
	        </div>
	      </div>
	    </div>
	  </div>
	</div>
</div>